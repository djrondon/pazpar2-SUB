<settings target="elibm.fiz-karlsruhe.de/srw/search/escidoc_all">
<!--
	FIZ Karlsruhe SRU Server for ELibm

	2012: Sven-S. Porst, SUB GÃ¶ttingen <porst@sub.uni-goettingen.de>
-->
	<set name="pz:name" value="ELibM"/>

	<!-- SRU 1.1 GET -->
	<set name="pz:sru" value="get"/>
	<set name="pz:sru_version" value="1.1"/>

	<!--
		Default Search settings:
		* ANDed word search for most fields (s=al)
		* no truncation by default but giving the user the option to
			opt for right truncation by adding a ? (t=r)
		* use attributes have names pica.XXX where XXX is the Pica search key
	-->
	<set name="pz:cclmap:term" value="u=cql.serverChoice s=al t=r"/>
	<set name="pz:cclmap:fulltext" value="u=fulltext s=1 t=r"/>

	<set name="pz:cclmap:title" value="u=ti s=al t=r"/>
	<set name="pz:cclmap:person" value="u=au s=al t=r"/>
	<set name="pz:cclmap:journal" value="u=so s=al t=r"/>
	<set name="pz:cclmap:subject" value="u=ut s=al t=r"/>
	<set name="pz:cclmap:msc" value="u=cc s=1 t=r"/>

	<!-- Logic for recognising date ranges is built into the index, we can send the string right there. -->
	<set name="pz:cclmap:date" value="u=py"/>

	<set name="pz:cclmap:isbn" value="u=pica.isb"/>
	<set name="pz:cclmap:issn" value="u=pica.iss"/>


	<!-- Map additional keys from the SRU explain response to pazpar2. -->
	<!-- citation, e.g. New York J. Math. 1, 39-74 (1994). -->
	<set name="pz:cclmap:so" value="u=so t=r"/>
	<!-- ID? -->
	<set name="pz:cclmap:pid" value="u=PID t=r"/>
	<!-- Zbl ID?, e.g. Zbl 0810.55007 -->
	<set name="pz:cclmap:an" value="u=an t=r"/>
	<!-- ? -->
	<set name="pz:cclmap:context" value="u=context t=r"/>
	<!-- abstract -->
	<set name="pz:cclmap:ab" value="u=ab t=r"/>


	<!-- indicate that all records are fulltexts -->
	<set name="has-fulltext" value="yes"/>

	<!-- Fetch turbomarc and normalise. -->
	<set name="pz:nativesyntax" value="xml;utf-8"/>
	<set name="pz:xslt" value="xsl/elibm-languages.xsl,xsl/ZMath-doctypes.xsl,xsl/ZMath.xsl"/>

</settings>
